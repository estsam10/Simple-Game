using System;
using System.CodeDom;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Q4
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // declaration 
            string user;

            // initialization 
            user = "";


            


            for (int i = 0; i < 5 ; i++)
            {
                Console.Write("Please enter a letter: ");
                user = Console.ReadLine();

                switch (user)
                {
                    case "A":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "a":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "E":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "e":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "I":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "i":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "O":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "o":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "u":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    case "U":
                        Console.WriteLine("\nYour Letter is a Vowel\n");
                        break;
                    default:
                        Console.WriteLine("\nYour Letter is not a Vowel\n");
                        break;

                }

            }

            Console.ReadLine();
        }

    }
}
